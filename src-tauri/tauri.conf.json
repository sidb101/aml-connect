{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "AnalogML Connect",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "src-tauri/binaries/aspinity_wrapper", 
            "sidecar": true,
            "args": [
              "--get_elements",
              {
                "validator": "\\S+"
              }
            ]
          }
        ]
      },
      "fs": {
        "scope": ["$APPLOCALDATA/**"],
        "readFile": true,
        "readDir": true,
        "exists": true,
        "writeFile": true
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.aml-connect.aspinity",
      "targets": "all",
      "externalBin": [
        "binaries/aspinity_wrapper"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "maximized": true,
        "resizable": true,
        "title": "AnalogML Connect",
        "width": 800,
        "height": 600
      }
    ]
  }
}
